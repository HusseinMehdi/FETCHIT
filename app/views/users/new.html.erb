<%= render 'header' %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <!-- Error Messages -->
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@user.errors.count, "Fehler") %> verhinderte die Registrierung:</h2>
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="registration-form-wrapper p-4 border rounded shadow">
        <h2 class="text-center mb-4">Registrierung</h2>
        <%= form_with(model: @user, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :firstName, "Vorname", class: "form-label" %>
            <%= form.text_field :firstName, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :lastName, "Nachname", class: "form-label" %>
            <%= form.text_field :lastName, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :email, "E-Mail", class: "form-label" %>
            <%= form.email_field :email, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :password, "Passwort", class: "form-label" %>
            <%= form.password_field :password, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :password_confirmation, "Passwort bestÃ¤tigen", class: "form-label" %>
            <%= form.password_field :password_confirmation, class: "form-control", required: true %>
          </div>

          <div class="text-center">
            <%= form.submit "Registrieren", class: "btn btn-primary mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
